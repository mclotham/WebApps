@page
@model ContosoUniv.WebAppRp.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<hr />
<div class="">
    <form id="mainForm" method="post">
        <input asp-for="Input.AllowDelete" type="hidden" />
        <input asp-for="Input.Name" type="hidden" />
        <input asp-for="Input.Id" type="hidden" />

        <div class="form-group row">
            <div class="col-md-12">
                <label>Role</label><br />
                @Model.Input.Name
            </div>
        </div>
        <div><br /></div>
        @if ( Model.Input.AllowDelete )
        {
            <div class="form-group row">
                <div class="col-md-12">
                    <span class="text-danger">This action will permanently delete this role.</span><br />
                    Click Delete to confirm.
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" class="btn btn-primary" value="Delete" />
                    <input type="button" class="btn btn-secondary" value="Cancel" style="margin-left: 100px" onclick="javascript:window.location.href='@Url.Page( "Index" )'" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group row">
                <div class="col-md-12">
                    <span class="text-danger">This role cannot be deleted. There are users currently assigned to it.</span>
                </div>
            </div>
        }
    </form>
</div>