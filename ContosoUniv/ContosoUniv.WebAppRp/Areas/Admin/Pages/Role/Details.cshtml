@page
@model ContosoUniv.WebAppRp.Areas.Admin.Pages.Role.DetailsModel
@{
    ViewData["Title"] = "Role Details";
}

<h1>Role Details</h1>

<hr />

<div>
    <div class="form-group row">
        <div class="col-md-12">
            <label>Role</label><br />
            @Model.Input.Name
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-md-6">
            <label>Permissions:</label><br />
            @foreach ( var permit in Model.Input.PermitList )
            {
                @permit<br />
            }
        </div>
        <div class="col-md-6">
            <label>Users:</label><br />
            @foreach ( var user in Model.Input.UserList )
            {
                @user<br />
            }
        </div>
    </div>
</div>