@model ContosoUniv.WebApp.Models.Role.DetailsMdl
@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Role Details</h1>

<hr />

<div>
    <div class="form-group row">
        <div class="col-md-12">
            <label>Role</label><br />
            @Model.Name
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <label>Permissions:</label><br />
            @foreach ( var permit in Model.PermitList )
            {
                @permit<br />
            }
        </div>
        <div class="col-md-6">
            <label>Users:</label><br />
            @foreach ( var user in Model.UserList )
            {
                @user<br />
            }
        </div>
    </div>
</div>