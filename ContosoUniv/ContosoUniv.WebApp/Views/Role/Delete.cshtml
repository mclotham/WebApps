@model ContosoUniv.InputModels.Admin.Role.DeleteInputMdl
@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Role</h1>

<hr />
<div class="">
    <form id="mainForm" method="post">
        <input asp-for="AllowDelete" type="hidden" />
        <input asp-for="Name" type="hidden" />
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <div class="col-md-12">
                <label>Role</label><br />
                @Model.Name
            </div>
        </div>
        <div><br /></div>
        @if ( Model.AllowDelete ) 
        { 
            <div class="form-group row">
                <div class="col-md-12">
                    <span class="text-danger">This action will permanently delete this role.</span><br />
                    Click Delete to confirm.
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-8">
                    <input type="submit" class="btn btn-primary" value="Delete" />
                    <input type="button" class="btn btn-secondary" value="Cancel" style="margin-left: 100px" onclick="javascript:window.location.href='@Url.Action( "Index", "Home" )'" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group row">
                <div class="col-md-12">
                    <span class="text-danger">This role cannot be deleted. There are users currently assigned to it.</span>
                </div>
            </div>
        }
    </form>
</div>
